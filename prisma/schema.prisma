generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model KnowledgeAsset {
  id        String   @id @default(cuid())
  topic     String
  source    String   // "Wikipedia" | "Grokipedia"
  jsonld    String   // Stored as JSON string
  createdAt DateTime @default(now())
}

model CommunityNote {
  id              String   @id @default(cuid())
  topic           String
  finding         String   // "missing" | "contradiction" | "bias" | "unsupported"
  evidence        String   // JSON array of KA ids
  confidence      Float
  stakedValue     String
  reputationScore Float
  createdAt       DateTime @default(now())
}
